generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ServerOwner {
  id            Int     @id @default(autoincrement())
  serverOwnerId String  @unique
  name          String
  email         String  @unique
  password      String
  serverId      Server?
}

model Server {
  id            Int         @id @default(autoincrement())
  serverId      String      @unique
  name          String      @unique
  serverOwner   ServerOwner @relation(fields: [serverOwnerId], references: [id])
  serverOwnerId Int         @unique
  product       Product[]
}

model Product {
  id        Int     @id @default(autoincrement())
  productId String  @unique
  name      String  @unique
  price     Float
  Server    Server? @relation(fields: [serverId], references: [id])
  serverId  Int?
}

